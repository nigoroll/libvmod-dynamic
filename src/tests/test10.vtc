varnishtest "max_connections"

barrier b1 cond 2
barrier b2 cond 2

server s1 {
	rxreq
	barrier b1 sync
	barrier b2 sync
	txresp
} -start

varnish v1 -vcl+backend {
	import ${vmod_dynamic};

	sub vcl_init {
		new d1 = dynamic.director(
			port = "${s1_port}",
			max_connections = 1);
	}

	sub vcl_recv {
		set req.backend_hint = d1.backend("${s1_addr}");
		return (pass);
	}

	sub vcl_backend_error {
		set beresp.status = 429;
	}
} -start

client c1 {
	txreq
	rxresp
	expect resp.status == 200
} -start

client c2 {
	barrier b1 sync
	txreq
	rxresp
	expect resp.status == 429
	barrier b2 sync
} -run

client c1 -wait
