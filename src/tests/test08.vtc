varnishtest "Invalid parameters"

server s1 { } -start

varnish v1 -vcl+backend { } -start

varnish v1 -errvcl "dynamic.director(): port may not be empty" {
	import ${vmod_dynamic};
	backend dummy { .host = "${bad_ip}"; .port = "9080"; }
	sub vcl_init {
		new d1 = dynamic.director(port = "");
	}
}

